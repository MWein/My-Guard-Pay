<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.weinbergsoftware.www.myguardpay.UpdateRank">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="35dp"
            android:id="@+id/NewRank">

            <TextView
                android:text="New Rank:"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:id="@+id/textView"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_weight="0.95"
                android:layout_width="170dp" />

            <Spinner
                android:layout_height="35dp"
                android:id="@+id/rankSpinner"
                android:layout_alignBottom="@+id/textView"
                android:layout_width="150dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:id="@+id/TIS">

            <TextView
                android:text="   Time In Service:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="0.60"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="12 Years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeInService"
                android:layout_weight="1"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/PerMuta">

            <TextView
                android:text="   Pay Per MUTA:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0.58"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="$80.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/payPerMuta"
                android:layout_weight="1"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:text="   Enlistment Date:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:weightSum="1"
            android:id="@+id/EnlistmentDate">

            <TextView
                android:text="  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Spacer"
                android:layout_weight="0.03" />

            <Spinner
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:id="@+id/EnlMonth"
                android:layout_weight="0.42" />

            <EditText
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/EnlYear"
                android:text="2011"
                android:layout_weight="0.26"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:text="Save Changes"
            android:layout_width="match_parent"
            android:id="@+id/SaveChanges"
            android:layout_weight="0.15"
            android:onClick="saveChanges"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spacer"
            android:layout_weight="2.17" />

    </LinearLayout>

</RelativeLayout>
